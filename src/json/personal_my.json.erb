{
    "title": "Personal rules (@my)",
    "rules": [
        {
            "description": "Change left_control+@ to escape",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("open_bracket", ["left_control"], ["any"]) %>,
                    "to": <%= to([["escape"]]) %>
                }
            ]
        },
        {
            "description": "Change left_command+h to control+shift+tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("h", ["left_command"], ["any"]) %>,
                    "to": <%= to([["tab", ["control", "shift"]]]) %>
                }
            ]
        },
        {
            "description": "Change left_command+l to control+tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("l", ["left_command"], ["any"]) %>,
                    "to": <%= to([["tab", ["control"]]]) %>
                }
            ]
        },
        {
            "description": "Change right_command to japanese_eisuu if alone",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("right_command", [], ["any"]) %>,
                    "to": <%= to([["right_command"]]) %>,
                    "to_if_alone": <%= to([["japanese_eisuu"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+period to japanese_kana",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("period", ["right_command"], ["any"]) %>,
                    "to": <%= to([["japanese_kana"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+comma to japanese_kana",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("comma", ["right_command"], ["any"]) %>,
                    "to": <%= to([["japanese_kana"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+i to tab",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("i", ["right_command"], ["any"]) %>,
                    "to": <%= to([["tab"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+0 to control+a",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("0", ["right_command"], ["any"]) %>,
                    "to": <%= to([["a", ["control"]]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+9 to control+e",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("9", ["right_command"], ["any"]) %>,
                    "to": <%= to([["e", ["control"]]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+h to left_arrow",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("h", ["right_command"], ["any"]) %>,
                    "to": <%= to([["left_arrow"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+j to down_arrow",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("j", ["right_command"], ["any"]) %>,
                    "to": <%= to([["down_arrow"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+k to left_arrow",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("k", ["right_command"], ["any"]) %>,
                    "to": <%= to([["up_arrow"]]) %>
                }
            ]
        },
        {
            "description": "Change right_command+l to right_arrow",
            "manipulators": [
                {
                    "type": "basic",
                    "from": <%= from("l", ["right_command"], ["any"]) %>,
                    "to": <%= to([["right_arrow"]]) %>
                }
            ]
        }
    ]
}
